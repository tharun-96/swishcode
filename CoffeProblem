import java.io.*;
import java.util.*;
import java.lang.*;

public class CoffeProblem
{
public static void main(String args[])
{
Scanner sc=new Scanner(System.in);
int mrp=sc.nextInt();
int off=sc.nextInt();
int sum=0;
if(mrp==0)
System.out.println("0");
else
{
 sum=mrp;
while(mrp>0)
{
float cut=(float)(mrp*off)/100;
mrp-=cut;
sum+=mrp;
}
System.out.println(sum);
}
}
}
